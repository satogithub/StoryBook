@model UserStory.WebUI.Models.GroupsCardsViewModel

@{
    ViewBag.Title = "Groups";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Groups</h2>

@foreach (var s in Model.GroupDatas)
{
    <div class="col-md-3">
        <div class="panel panel-default">
            <div class="panel-heading">@s.GroupName</div>
            <div class="panel-body">
                @s.GroupDescription
            </div>
            <div class="panel-footer">
                <span>Members:</span> <span class="badge">@s.MemberCount</span>
                <span>Stories:</span> <span class="badge">@s.StoriesCount</span>
                @*<a class="btn btn-default" href="#" role="button">Show Details >></a>*@
                @*<a class="btn btn-default" href="#" role="button">Edit Story >></a>*@
            </div>
        </div>
    </div>
}